#!/usr/bin/env node

// This is the gombot API server!
var     Hapi = require('hapi'),
   apiLoader = require('../lib/api_loader.js');

function fatal(msg) {
  process.stderr.write("fatal error: " + msg + "\n");
  process.exit(1);
}

var options = {
  name: "Gombot Server",
  docs: true
};

// Create a server with a host and port
var server = new Hapi.Server('127.0.0.1', (process.env.PORT ? parseInt(process.env.PORT) : 8080), options);

server.on('bound', function(host, port) {
  process.stdout.write('bound to ' + host + ':' + port + "\n");
});

// now load up api handlers
apiLoader(server, function(err) {
  if (err) fatal(err);
  // Start the server
  server.start();
});

process.on('SIGTERM', function() {
  server.stop();
});
